        script(type="text/javascript" src="javascripts/jquery-ui.min.js")
        script(type="text/javascript" src="javascripts/bootstrap.min.js")
    body
        // Start Page Loading
        #loader-wrapper
            #loader
            .loader-section.section-left
            .loader-section.section-right
        // End Page Loading
        // ////////////////////////////////////////////////////////////////////////////
        // START HEADER
        header#header.page-topbar
            // start header nav
            .navbar-fixed
                nav.cyan
                    .nav-wrapper
                        h1.logo-wrapper
                            a.brand-logo.darken-1(href='/') BronsonLabs
                            span.logo-text BronsonLabs
            // end header nav
        // END HEADER
        // ////////////////////////////////////////////////////////////////////////////
        // START MAIN
        #main
            // START WRAPPER
            .wrapper
                include navbar
                // ////////////////////////////////////////////////////////////////////////////
                // START CONTENT
                section#content
                    // breadcrumbs start
                    #breadcrumbs-wrapper.grey.lighten-3
                        .container
                            .row
                                .col.s12.m12.l12
                                    h5.breadcrumbs-title Categories
                                    ol.breadcrumb
                                        li
                                            a(href='/') Dashboard
                                        li
                                            a(href='#') Charts
                                        li.active Categories by media
                    // breadcrumbs end
                    // start container
                    .container
                        .section
                            // Bar Chart
                            #chartjs-bar-chart.section
                                h4.header Medias
                                    .row
                                        .col.s12.m4.l3
                                            p
                                                | Media sources
                                        .col.s12.m8.l9
                                            .input-field.col.s12
                                                select.browser-default.chosen-select(id="mediaChooser" multiple="true" class="mediaSelect" onchange="refresh()")
                                h4.header Radars
                                .row
                                    .col.s12.m8.l9
                                        .sample-chart-wrapper
                                            div#charts-container
                            .divider
                    // end container
                // END CONTENT
                // ////////////////////////////////////////////////////////////////////////////
            // END WRAPPER
        // END MAIN
        // ////////////////////////////////////////////////////////////////////////////
        // START FOOTER
        footer.page-footer
            .footer-copyright
                .container
                    span
                        | Copyright Â© 2016
                        a.grey-text.text-lighten-4(href='/', target='_blank') BronsonLabs
                        |  All rights reserved.
                    span.right
                        | Design and Developed by
                        a.grey-text.text-lighten-4(href='/') BronsonLabs
        // END FOOTER
