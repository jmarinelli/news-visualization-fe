extends layout

block content
    link(rel='stylesheet', href='/stylesheets/categories.css')
    select(id="categoryChooser")
    h4 Start date
        input(type="date" data-date-format="yyyy-mm-dd" value="2016-01-05" id="startDate")
    h4 End date
        input(type="date" data-date-format="yyyy-mm-dd" value="2016-01-06" id="endDate")
    button(class="refreshButton" onClick="refresh()") Generate
    div(class="container")
        h2 Horizontal row chart
        div(id='rowChart' class="chart")
    div(class="container")
        h2 Pie chart
        div(id='pieChart' class="chart")
    script(type="text/javascript" src="javascripts/categories.js")